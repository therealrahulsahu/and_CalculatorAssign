<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff22fe"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/op1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bsub"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Enter 1st No."
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/op2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/op1"
        android:layout_below="@+id/op1"
        android:ems="10"
        android:hint="Enter 2nd No."
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/badd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bmul"
        android:layout_marginTop="184dp"
        android:text="+" />

    <Button
        android:id="@+id/bsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/badd"
        android:layout_marginEnd="45dp"
        android:text="-" />

    <Button
        android:id="@+id/bmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="243dp"
        android:text="*" />

    <Button
        android:id="@+id/bdiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bsub"
        android:layout_alignTop="@+id/bmul"
        android:text="/" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="138dp"
        android:layout_marginStart="82dp"
        android:text="Ans"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/bpow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/badd"
        android:layout_marginBottom="235dp"
        android:text="x^y" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/op1"
        android:layout_toStartOf="@+id/op1"
        android:text="x  ="
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_below="@+id/op1"
        android:layout_toStartOf="@+id/op1"
        android:text="y  ="
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <Button
        android:id="@+id/bper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/op1"
        android:layout_alignTop="@+id/bpow"
        android:text="%" />

    <Button
        android:id="@+id/bnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="Okay" />

</RelativeLayout>